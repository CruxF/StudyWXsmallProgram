/* pages/cart/cart.wxss */

.drug-order {
  background-color: rgb(250, 250, 250);
  min-height: 100vh;
}

.cart_container {
  display: flex;
  flex-direction: row;
  background-color: #fff;
  margin-top: 20rpx;
  padding: 0rpx 20rpx;
  box-sizing: border-box;
}

.scroll {
  margin-bottom: 120rpx;
}

.column {
  display: flex;
  flex-direction: column;
}

.row {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.sku {
  position: relative;
  right: -200rpx;
  bottom: -10rpx;
}

.sku text {
  display: inline-block;
  height: 40rpx;
  line-height: 34rpx;
  width: 40rpx;
  margin-left: 20rpx;
  text-align: center;
}

.sku .sub {
  color: #000;
  border: 1px solid #888;
  border-radius: 50%;
  font-weight: bold;
}

.sku .number {
  font-size: 26rpx;
  font-family: ArialMT;
  color: rgba(3, 3, 3, 1);
}

.sku .add {
  color: rgb(102, 193, 140);
  border: 1px solid rgb(102, 193, 140);
  border-radius: 50%;
  font-weight: bold;
}

.sku-price {
  font-size: 22rpx;
  font-family: ArialMT;
  color: rgba(230, 67, 64, 1);
  margin-top: 38rpx;
}

.price {
  color: red;
  position: relative;
}

.title {
  font-size: 26rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(74, 74, 74, 1);
  margin-top: 20rpx;
}

.desc {
  font-size: 22rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
}

.small_text {
  font-size: 28rpx;
  margin-right: 40rpx;
  margin-left: 10rpx;
}

.item-select-no {
  position: relative;
  width: 40rpx;
  height: 40rpx;
  border: 1px solid #ccc;
  border-radius: 50%;
  margin-top: 58rpx;
  margin-left: 20rpx;
}

.item-select-yes {
  position: relative;
  width: 40rpx;
  height: 40rpx;
  border: 1px solid rgb(102, 193, 140);
  border-radius: 50%;
  margin-top: 58rpx;
  margin-left: 20rpx;
}

.item-select-yes text {
  position: absolute;
  left: 6rpx;
  top: 6rpx;
  height: 29rpx;
  width: 29rpx;
  border-radius: 50%;
  background-color: rgb(102, 193, 140);
}

.item-allselect-no {
  position: relative;
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
  border: 1px solid #ccc;
  border-radius: 50%;
}

.item-allselect-yes {
  position: relative;
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
  border: 1px solid rgb(102, 193, 140);
  color: #fff;
  border-radius: 50%;
}

.item-allselect-yes text {
  position: absolute;
  left: 6rpx;
  top: 6rpx;
  height: 29rpx;
  width: 29rpx;
  border-radius: 50%;
  background-color: rgb(102, 193, 140);
}

.item-image {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
}

.bottom_line {
  width: 100%;
  height: 2rpx;
  background: lightgray;
}

.bottom_total {
  position: fixed;
  display: flex;
  flex-direction: column;
  bottom: 0;
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  background: white;
}

.button-red {
  background-color: #f44336;
}

button {
  position: fixed;
  right: 0;
  color: white;
  text-align: center;
  display: inline-block;
  font-size: 30rpx;
  border-radius: 0rpx;
  width: 30%;
  height: 120rpx;
  line-height: 120rpx;
}
